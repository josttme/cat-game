---
export interface Props {
  scaleX: string;
  position: string;
}

const { scaleX, position } = Astro.props;
---

<div class="bush" style=`transform: scaleX(${scaleX}); ${position}: 11px;`>
  <div class="bush-2"></div>
</div>

<style>
  .bush {
    width: 287px;
    height: 80px;
    background: green;
    border-radius: 100px;
    position: absolute;
    bottom: -20px;
    z-index: 10;
    box-shadow: 0 0px 10px rgba(0, 0, 0, 0.3);
  }

  .bush::before {
    content: "";
    width: 120px;
    height: 120px;
    background: green;
    border-radius: 100px;
    position: absolute;
    top: -40px;
    left: -10px;
  }

  .bush::after {
    content: "";
    width: 160px;
    height: 160px;
    background: green;
    border-radius: 150px;
    position: absolute;
    top: -100px;
    left: 40px;
  }

  .bush-2 {
    width: 300px;
    height: 60px;
    background: rgb(76, 159, 255);
    position: relative;
    top: 60px;
    left: 0;
    z-index: 10;
  }

  .bush-2::before {
    content: "";
    width: 100px;
    height: 100px;
    background: green;
    border-radius: 100px;
    position: absolute;
    top: -120px;
    left: 160px;
  }

  .bush-2::after {
    content: "";
    width: 150px;
    height: 150px;
    background: transparent;
    border-radius: 150px;
    position: absolute;
    top: -90px;
    left: 50px;
  }
</style>
